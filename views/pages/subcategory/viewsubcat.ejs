<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1><%- title %></h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active"><%- title %></li>
                    </ol>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Title</h3>
            </div>
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>SN</th>
                            <th>SubCatName</th>
                            <th>CatName</th>
                            <th>CreatedAt</th>
                            <th>UpdatedAt</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% subcategories.forEach((subcategory, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= subcategory.name %></td>
                            <td><%= subcategory.category.name %></td>
                            <td>
                                <% if(formatDistance && subDays) { %> <%=
                                formatDistance(subDays(new Date(), 0), new
                                Date(subcategory.createdAt), { addSuffix: true
                                }) %> <% } %>
                            </td>
                            <td>
                                <% if(formatDistance && subDays) { %> <%=
                                formatDistance(subDays(new Date(), 0), new
                                Date(subcategory.updatedAt), { addSuffix: true
                                }) %> <% } %>
                            </td>
                            <td>
                                <a
                                    href="/editSubCategory/<%= subcategory.id %>"
                                    class="btn btn-primary"
                                >
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a
                                    href="/deleteSubCategory/<%= subcategory.id %>"
                                    class="btn btn-danger"
                                >
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
