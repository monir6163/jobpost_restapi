<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="/dashboard" class="brand-link">
        <img
            src="/dist/img/AdminLTELogo.png"
            alt="AdminLTE Logo"
            class="brand-image img-circle elevation-3"
            style="opacity: 0.8"
        />
        <span class="brand-text font-weight-light">Job Hunter</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img
                    src="/dist/img/user2-160x160.jpg"
                    class="img-circle elevation-2"
                    alt="User Image"
                />
            </div>
            <div class="info">
                <a href="#" class="d-block">
                    <% if (user) { %> <%= user.name %> <% } %>
                </a>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul
                class="nav nav-pills nav-sidebar flex-column"
                data-widget="treeview"
                role="menu"
                data-accordion="false"
            >
                <!-- Add icons to the links using the .nav-icon class
             with font-awesome or any other icon font library -->
                <li class="nav-item">
                    <a
                        href="/dashboard"
                        class="nav-link <%- title === 'Dashboard' ? 'active' : '' %>"
                    >
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li
                    class="nav-item <%= title === 'Category' ? 'menu-is-opening menu-open' : '' %>"
                >
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-plane"></i>
                        <p>
                            Job Categories
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a
                                href="/category"
                                class="nav-link <%= title === 'Category' ? 'active' : '' %>"
                            >
                                <i class="far fa-circle nav-icon"></i>
                                <p>All Category</p>
                            </a>
                        </li>
                    </ul>
                </li>
                <li
                    class="nav-item <%= title === 'View All Post' || title === 'Add Post' || title === 'Edit Post' ? 'menu-is-opening menu-open' : '' %>"
                >
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-plus-square"></i>
                        <p>
                            Posts Job
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a
                                href="/postview"
                                class="nav-link <%= title === 'View All Post' || title === 'Edit Post' ? 'active' : '' %>"
                            >
                                <i class="far fa-circle nav-icon"></i>
                                <p>All Posts</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a
                                href="/addpost"
                                class="nav-link <%= title === 'Add Post' ? 'active' : '' %>"
                            >
                                <i class="far fa-circle nav-icon"></i>
                                <p>Add Post</p>
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a href="/logout" class="nav-link" id="logoutUser">
                        <i class="nav-icon far fa-circle text-info"></i>
                        <p>Logout</p>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>

<script>
    //logout user
    const logoutUser = document.querySelector("#logoutUser");
    logoutUser.addEventListener("click", async (e) => {
        e.preventDefault();
        try {
            const res = await fetch("/logout", {
                method: "GET",
                headers: { "Content-Type": "application/json" },
            });
            const data = await res.json();
            if (data.status === "success") {
                Toastify({
                    text: data.message,
                    duration: 5000,
                    style: {
                        background:
                            "linear-gradient(to right, #00b09b, #96c93d)",
                    },
                }).showToast();
                setTimeout(() => {
                    location.assign("/");
                }, 1000);
            }
        } catch (err) {
            console.log(err);
        }
    });
</script>
